# Required for memory features (semantic search via ChromaDB)
VOYAGE_API_KEY=your-voyage-api-key

# ChromaDB URL (optional - uses http://localhost:8000 if not set)
CHROMA_URL=http://localhost:8000

# ChromaDB external port for Docker (default: 8000)
CHROMA_PORT=8000

# Required for GitHub OAuth authentication
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# HTTP server port (default: 3000)
MCP_PORT=3000

# Base URL for OAuth metadata endpoint (default: http://localhost:${MCP_PORT})
BASE_URL=http://localhost:3000

# Optional: OAuth callback URL (default: ${BASE_URL}/oauth/callback)
OAUTH_CALLBACK_URL=http://localhost:3000/oauth/callback
