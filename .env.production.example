# Domain configuration
DOMAIN=calq.example.com
BASE_URL=https://calq.example.com
OAUTH_CALLBACK_URL=https://calq.example.com/oauth/callback

# Let's Encrypt email for SSL certificates
ACME_EMAIL=admin@example.com

# PostgreSQL (use a strong password!)
POSTGRES_PASSWORD=change-this-to-a-strong-password

# ChromaDB auth token (generate with: openssl rand -hex 32)
CHROMA_AUTH_TOKEN=change-this-to-a-random-token

# Voyage AI for semantic search
VOYAGE_API_KEY=your-voyage-api-key

# GitHub OAuth (create at https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Traefik dashboard auth (generate with: htpasswd -nb admin password)
TRAEFIK_AUTH=admin:$$apr1$$xyz...
